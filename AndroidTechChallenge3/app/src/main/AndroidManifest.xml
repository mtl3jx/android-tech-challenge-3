<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.captechventures.techchallenge3">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/map_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/map_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".search.SearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".search.results.SearchResultTableActivity"
            android:parentActivityName=".search.SearchActivity"
            android:launchMode="singleTop"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".search.SearchActivity" />
        </activity>
        <activity
            android:name=".map.MapsActivity"
            android:label="@string/title_activity_maps"
            android:launchMode="singleTop"
            android:parentActivityName=".search.results.SearchResultTableActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".search.results.SearchResultTableActivity" />
        </activity>
        <activity android:name=".details.ZipCodeDetailsActivity"
            android:parentActivityName=".map.MapsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".map.MapsActivity" />
        </activity>
    </application>

</manifest>